---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faAngleDown, faAngleUp, faTimes } from '@fortawesome/free-solid-svg-icons';

---

<Layout title="Meu Carrinho">
  <div class="relative mb-12">
    <div class="relative">
      <div class="relative w-full h-24">
        <Image
          src="/home-bg.jpeg"
          alt="Hero"
          width={1125}
          height={750}
          class="w-full h-24 absolute object-cover"
        />
        <div class="w-full h-24 absolute bg-black bg-opacity-65"></div>
      </div>
      <Header className="py-0 h-24" />
    </div>
    <nav class="bg-gray-100 py-12 px-6 text-center">
      <h1 class="font-serif text-3xl uppercase tracking-bigger font-normal leading-relaxed text-tiny-black">
        MEU CARRINHO
      </h1>
      <div class="text-xss flex items-center gap-1 justify-center mt-4 uppercase text-small-gray tracking-wider">
        <a href="/catalogo" class="text-black font-bold hover:underline underline-offset-2">
          Catálogo
        </a>
        <span>/</span>
        <p>
          Carrinho
        </p>
      </div>
    </nav>
    <div class="px-5 lg:px-48">
      <table class="w-full mt-5">
        <thead class="uppercase text-small-gray font-serif font-normal text-xss">
          <tr class="border-b border-b-gray-200 h-12">
            <th></th>
            <th class="font-normal text-start w-1/3">Produto</th>
            <th class="font-normal">Preço</th>
            <th class="font-normal">Quantidade</th>
            <th class="font-normal">Total</th>
          </tr>
        </thead>
        <tbody>
          <tr class="h-16 text-tiny-black border-b border-b-gray-200">
            <td>
              <button class="px-3 text-xs text-red-400">
                <FontAwesomeIcon icon={faTimes} />
              </button>
            </td>
            <td class="text-sm">
              <div class="flex items-center gap-2">
                <Image
                  src="/corrente.jpeg"
                  alt="Corrente"
                  width={300}
                  height={100}
                  class="object-cover w-9 h-9"
                />
                <p>
                  Conjunto esmeralda quadrado
                </p>
              </div>
            </td>
            <td class="text-sm text-center">
              R$92,49
            </td>
            <td>
              <div class="w-full flex justify-center">
                <div class="border-2 border-black inline-flex">
                  <input type="number" class="w-10 h-8 outline-none text-center text-sm" value="1" />
                  <div class="h-8 w-7 bg-black flex flex-col">
                    <button class="text-white text-xs text-center">
                      <FontAwesomeIcon icon={faAngleUp} />
                    </button>
                    <button class="text-white text-xs text-center">
                      <FontAwesomeIcon icon={faAngleDown} />
                    </button>
                  </div>
                </div>
              </div>
            </td>
            <td class="text-sm text-center">
              R$92,49
            </td>
          </tr>
        </tbody>
      </table>
      <a
        href="/checkout"
        class="flex justify-center items-center
          font-action tracking-bigger text-black bg-white border-2 border-black
          hover:text-white hover:bg-black transition-colors
          h-11 px-6 text-xs uppercase mt-10
          lg:w-1/2 lg:ml-auto lg:mr-auto"
      >
        Finalizar Compra
      </a>
    </div>
  </div>
</Layout>